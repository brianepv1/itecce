---
import { testimonials } from '../../constants/testimonials';
import StarIcon from '../Icons/StartIcon.astro';
---

<section class="section-main background-gradient">
  <div class="container">
    <div class="inner-wrapper">
      <div class="section-header content-align-center">
        <div class="margin-bottom margin-12px">
          <div class="section-header-subheading background-gradient">Testimonios</div>
        </div>
        <div class="margin-bottom margin-24px">
          <h2 class="section-header-heading">Nuestros m√°s satisfechos estudiantes</h2>
        </div>
      </div>
      <div class="section-content global-testimony">
        <div class="global-testimony-slider-wrapper w-slider" data-animation="slide" data-duration="500" data-infinite="true">
          <div class="global-testimony-slider-mask w-slider-mask">
            {testimonials.map((testimonial, index) => (
              <div class="global-testimony-slider-item w-slide" role="group">
                <div class="global-testimony-slider-content">
                  <div class="testimony-slider-image">
                    <div class="image-animated-mask">
                      <div class="image-animated-scale">
                        <img src={testimonial.image} loading="lazy" alt={testimonial.name} class="image-default" />
                      </div>
                    </div>
                  </div>
                  <div class="testimony-slider-details">
                    <h3 class="testimony-slider-title">{testimonial.name}</h3>
                    <div class="margin-bottom margin-24px">
                      <div class="testimony-slider-subtitle">{testimonial.role}</div>
                    </div>
                    <div class="margin-bottom margin-40px">
                      <blockquote class="testimony-slider-quote">{testimonial.quote}</blockquote>
                    </div>
                    <div class="testimony-star-images">
                      {[...Array(5)].map((_, i) => (
                        <StarIcon filled={i < testimonial.stars} />
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
          <div class="testimony-slider-arrow _1 w-slider-arrow-left" role="button" tabindex="0" aria-label="previous slide">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 24 24" fill="none" class="testimony-slider-arrow-icon">
