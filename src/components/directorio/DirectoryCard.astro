---
interface Props {
  name: string;
  title: string;
  position: string;
  href: string;
  image?: string;
}

const { name, title, position, href, image = "/images/default-profile.webp" } = Astro.props;
---

<div role="listitem" class="w-full p-4">
  <a
    href={href}
    class="block bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
  >
    <div class="relative aspect-square overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-primary/5 z-10"></div>
      <img
        src={image}
        loading="lazy"
        alt={`Photo of ${name}`}
        class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
      />
      <div class="absolute top-4 left-4 z-20">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-8 h-8 text-primary"
        >
          <path fill-rule="evenodd" d="M9 4.5a.75.75 0 01.721.544l.813 2.846a3.75 3.75 0 002.576 2.576l2.846.813a.75.75 0 010 1.442l-2.846.813a3.75 3.75 0 00-2.576 2.576l-.813 2.846a.75.75 0 01-1.442 0l-.813-2.846a3.75 3.75 0 00-2.576-2.576l-2.846-.813a.75.75 0 010-1.442l2.846-.813A3.75 3.75 0 007.466 7.89l.813-2.846A.75.75 0 019 4.5zM18 1.5a.75.75 0 01.728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 010 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 01-1.456 0l-.258-1.036a2.625 2.625 0 00-1.91-1.91l-1.036-.258a.75.75 0 010-1.456l1.036-.258a2.625 2.625 0 001.91-1.91l.258-1.036A.75.75 0 0118 1.5zM16.5 15a.75.75 0 01.712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 010 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 01-1.422 0l-.395-1.183a1.5 1.5 0 00-.948-.948l-1.183-.395a.75.75 0 010-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0116.5 15z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-900 mb-2">{name}</h3>
      <div class="text-sm text-gray-600 mb-4">
        {title && <span class="font-medium">{title}</span>}
        {title && position && <span class="mx-2">â€¢</span>}
        {position && <span>{position}</span>}
      </div>
      <div class="flex items-center text-primary">
        <span class="text-sm font-medium">View Profile</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </div>
    </div>
  </a>
</div>
