---
import { GENERAL } from "../../constants/constants";
---

<header class="section-global-hero background-gradient">
	<div class="container">
		<div class="inner-wrapper courses-hero">
			<div class="courses-hero-content">
				<div
					data-w-id="179d6f24-326e-99fe-081b-51a6dd877ebb"
					class="breadcrumbs"
				>
					<a href="/" class="breadcrumbs-link root">Inicio</a><div class="breadcrumbs-divider">
						/
					</div><a href="/carreras" aria-current="page" class="breadcrumbs-link w--current"
						>Carreras</a>
				</div><div class="margin-bottom margin-16px">
					<h1
						data-w-id="15f0fdd6-4735-d34d-8724-7363a44d1fb1"
						class="text-capitalize"
					>
						Nuestras carreras y programas
					</h1>
				</div><div class="margin-bottom margin-48px">
					<p
						data-w-id="2103f6fa-4cc8-39de-afe4-e4611e414a4a"
						class="body-text-default"
					>
						{GENERAL.marketing}
					</p>
				</div><div
					data-w-id="53258b4d-e63e-aa13-4114-f88942859dd6"
					class="button-container"
				>
					<a href="#Courses" class="button-primary w-inline-block">
						<div class="button-box-wrap">
							<div class="button-box">
								<div class="button-text">Explorar Carreras</div>
								<div class="button-text-absolute">
									Explorar Carreras
								</div>
							</div>
						</div>
					</a>
				</div>
			</div><div
				data-w-id="b36a88dc-65c7-bd85-8aaf-3071e34294fa"
				class="courses-hero-figure"
			>
				<a
					href="#"
					class="w-inline-block w-lightbox"
					aria-label="open lightbox"
					aria-haspopup="dialog"
					><div class="course-hero-image">
