---
import Layout from '../layouts/Layout.astro';
import Landing from '../components/landing/Landing.astro';
import DegreePrograms from '../components/landing/DegreePrograms.astro';
import Events from '../components/landing/PopularPrograms.astro';
import Advantages from '../components/landing/Advantages.astro';
import Faqs from '../components/landing/Faqs.astro';
import Testimonials from '../components/landing/Testimonials.astro';
import GlobalCTA from '../components/GlobalCTA.astro';
import Locations from '../components/Locations.astro';
import { GENERAL } from '../constants/constants';
import ItecceLoading from '../components/react/ItecceLoading';
---

<Layout title={GENERAL.title} description={GENERAL.description}>
  <div id="loadingWrapper">
    <ItecceLoading client:only="react" />
  </div>

  <div id="mainContent" style="opacity: 0; transition: opacity 0.5s ease-in;">
    <Landing />
    <main class="main-wrapper">
      <DegreePrograms />
      <Events />
      <Advantages />
      <Testimonials />
      <Faqs />
      <Locations subHeading="Nuestras Ubicaciones" heading="Encuentra tu campus mÃ¡s cercano" />
      <GlobalCTA />
    </main>
  </div>
</Layout>
