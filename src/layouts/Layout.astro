---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

import '../css/normalize.css';
import '../css/webflow.css';
import '../css/itecce.webflow.css';

interface Props {
	title: string;
	description: string;
}

import { GENERAL } from '../constants/constants';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Descubre la Universidad que transforma vidas: donde tu futuro comienza hoy, impulsado por la innovación, el conocimiento y el liderazgo global." />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:url" content={Astro.url}
		<meta name="viewport" content="width=device-width" />

		<!-- Open Graph / Facebook -->
		 <meta property="og:site_name" content="Universidad Itecce" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Itecce - Innovación y Excelencia en Educación" />
		<meta property="og:description" content="Descubre la Universidad que transforma vidas: donde tu futuro comienza hoy, impulsado por la innovación, el conocimiento y el liderazgo global." />
		<meta property="og:image" content="https://static.wixstatic.com/media/54c83e_5cf8b42c1a374fa297251ad32174ae45~mv2.png" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Itecce - Innovación y Excelencia en Educación" />
		<meta name="twitter:description" content="Descubre la Universidad que transforma vidas: donde tu futuro comienza hoy, impulsado por la innovación, el conocimiento y el liderazgo global." />
		<meta name="twitter:image" content="https://static.wixstatic.com/media/54c83e_5cf8b42c1a374fa297251ad32174ae45~mv2.png" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		<link rel="shortcut icon" type="image/x-icon" href="/images/Logos/favicon.ico" />
		<link rel="apple-touch-icon" href="/images/webclip.svg" />
		<title>{GENERAL.title} | Universidad Itecce - Tu mejor opcion para la universidad</title>
	</head>
	<body>
		<div class="page-wrapper">
			<Navigation />
			<slot />
			<Footer></Footer>
		</div>
		<!-- jQuery script from your original HTML -->
		<script
			is:inline
			src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=66fb75f0a77f88302082f4ef"
			type="text/javascript"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"></script>

		<!-- Main script -->
		<script src="../js/webflow.js"></script>
	</body>
</html>
