---
// @ts-nocheck
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

import '../css/normalize.css';
import '../css/webflow.css';
import '../css/itecce.webflow.css';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<title>{title} | Universidad Itecce - Tu mejor opción para la universidad</title>
		<meta name="description" content={description} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/images/webclip.svg" />
		<link rel="shortcut icon" type="image/x-icon" href="/images/Logos/favicon.ico" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`${title} | Universidad Itecce`} />
		<meta property="og:description" content={description} />
		<meta
			property="og:image"
			content="https://static.wixstatic.com/media/66e106_796be2e1d349493a8757fee88633bc3e~mv2.png/v1/fill/w_207,h_148,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/logo%20sin%20fondo%20blanco.png"
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta
			property="og:image:alt"
			content="Universidad Itecce - Innovación y Excelencia en Educación"
		/>
		<meta property="og:site_name" content="Universidad Itecce" />
		<meta property="og:locale" content="es_MX" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={Astro.url} />
		<meta name="twitter:title" content={`${title} | Universidad Itecce`} />
		<meta name="twitter:description" content={description} />
		<meta
			name="twitter:image"
			content="https://static.wixstatic.com/media/66e106_796be2e1d349493a8757fee88633bc3e~mv2.png/v1/fill/w_207,h_148,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/logo%20sin%20fondo%20blanco.png"
		/>
		<meta
			name="twitter:image:alt"
			content="Universidad Itecce - Innovación y Excelencia en Educación"
		/>

		<!-- LinkedIn -->
		<meta
			property="og:image"
			content="https://static.wixstatic.com/media/66e106_796be2e1d349493a8757fee88633bc3e~mv2.png/v1/fill/w_207,h_148,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/logo%20sin%20fondo%20blanco.png"
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="627" />

		<!-- WhatsApp -->
		<meta
			property="og:image"
			content="https://static.wixstatic.com/media/66e106_796be2e1d349493a8757fee88633bc3e~mv2.png/v1/fill/w_207,h_148,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/logo%20sin%20fondo%20blanco.png"
		/>
		<meta property="og:image:width" content="300" />
		<meta property="og:image:height" content="300" />

		<!-- Additional tags -->
		<meta name="theme-color" content="#4285f4" />
		<link rel="canonical" href={Astro.url} />

		<!-- Preconnect and preload -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<!-- Preload audio -->
		<link
			rel="preload"
			href="/sounds/SonidoItecce.mp3"
			as="fetch"
			type="audio/mpeg"
			crossorigin="anonymous"
		/>

		<!-- Use absolute path for fonts -->
		<link rel="preload" href="/fonts/Satoshi-Variable.ttf" as="font" type="font/ttf" crossorigin>

	</head>
	<body>
		<div class="page-wrapper">
			<Navigation />
			<slot />
			<Footer />
		</div>

		<!-- jQuery script from your original HTML -->
		<script
			is:inline
			src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=66fb75f0a77f88302082f4ef"
			type="text/javascript"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"></script>

		<!-- Main script -->
		<script src="../js/webflow.js"></script>
	</body>
</html>
